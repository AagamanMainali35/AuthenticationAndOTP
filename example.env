# .env.example (This file will be committed to the repo)

# Django Secret Key (replace with your own secret key)
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3  # Use the appropriate DB path or connection info

# Debug Mode (set to 'True' for development)
DEBUG=True

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (replace with your email server details)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
